<?xml version="1.0" encoding="utf-8"?>
<resources>
    <color name="background_dark">#1A1A2E</color>
    <color name="background_darker">#16213E</color>
    <color name="black">#FF000000</color>
    <color name="ic_launcher_background">#FFFFFF</color>
    <color name="navigation_bar">#1A1A2E</color>
    <color name="purple_200">#BB86FC</color>
    <color name="purple_500">#7C3AED</color>
    <color name="purple_700">#6D28D9</color>
    <color name="status_bar">#1A1A2E</color>
    <color name="teal_200">#03DAC5</color>
    <color name="teal_700">#018786</color>
    <color name="text_primary">#FFFFFF</color>
    <color name="text_secondary">#A1A1AA</color>
    <color name="white">#FFFFFFFF</color>
    <string name="app_name">Shirur Express</string>
    <style name="Theme.ShirurExpress" parent="Theme.Material3.DayNight.NoActionBar">
        
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@android:color/white</item>
        
        
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@android:color/black</item>
        
        
        <item name="android:statusBarColor">@color/status_bar</item>
        <item name="android:navigationBarColor">@color/navigation_bar</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowLightNavigationBar">false</item>
        
        
        <item name="android:colorBackground">@color/background_dark</item>
        <item name="android:windowBackground">@color/background_dark</item>
        
        
        <item name="android:windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="Theme.ShirurExpress.Splash" parent="Theme.ShirurExpress">
        <item name="android:windowBackground">@drawable/splash_background</item>
    </style>
</resources>